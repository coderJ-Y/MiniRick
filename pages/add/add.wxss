/* pages/add/add.wxss */
/* rgba(245, 98, 80, 0.8) 
   rgb(92, 159, 197) 
*/
page {
  background: #f2f2f2;
}

.post {
  padding-bottom: 80rpx
}
.postTitle {
  padding: 34rpx;
  background: #fff;
  border-bottom: 2rpx solid #efefef;
}
.postTitle input {
  font-size: 50rpx;
  font-weight: bold;
  line-height: 50rpx;
}
.postCon{
  padding: 34rpx;
  background: #fff;
}
.postCon>textarea{
  width: 100%;
  height: 200rpx;
  font-size: 40rpx;
  line-height: 50rpx;
  color: #262626;
}

/* 上传图片 */
.upload {
  padding: 20rpx;
  background: #fff;
}
.upload_title {
  color: #666;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
}

.icontianjiatupian {
  font-size: 90rpx;
  margin: 20rpx 20rpx;
}

.cell_group {
  padding: 20rpx;
  margin-top: 20rpx;
  background: #fff;
}
.price,.phone,.classify {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 30rpx 10rpx;
}
.left {
  float: left;
  align-items: center;
}
.left image {
  float: left;
  width: 46rpx;
  height: 46rpx;
  margin-right: 15rpx;
}
.right {
  float: left;
  margin-left: 230rpx;
}
.right text {
  font-size: 30rpx;
  color: rgb(92, 159, 197) ;
  margin-right: 15rpx;
}
.iconzhixiang-right {
  font-size: 38rpx;
}
.classify {
  border-bottom: none;
}

.info{
  margin-top: 10rpx;
  padding: 10rpx;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}
.infoBox{
  border-radius: 10rpx;
  padding: 20rpx;
}
.infoBox>text{
  display: flex;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}
.upload_title text{
  color: rgb(92, 159, 197);
  font-size: 34rpx;
}

/* 发布 */
.fabu {
  margin-top: 60rpx;
}
.fabuBtn {
  background: rgb(92, 159, 197) ;
  color: #fff;
}