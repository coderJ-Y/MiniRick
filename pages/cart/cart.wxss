/* page #f67353 */

page {
  background-color: #f7f7f7;
}

/* 购物车不为空 */

.shop {
  margin: 20rpx 20rpx 150rpx;
  border-radius: 15rpx;
  box-shadow: 2px 3px 5px rgb(201, 196, 196);
  background-color: #fff;
  padding: 20rpx 0;
}
.shop-name {
  margin: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 40rpx;
  color: rgba(245, 98, 80, 0.8)
}

.shop-name text {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  font-size: 3.0em;
  flex: 0 0 100%;
  letter-spacing: 0.15em;
  margin: 0;
  text-transform: uppercase;
  text-align: center;
}

.cart-o {
  font-size: 60rpx;
  float: right;
}
