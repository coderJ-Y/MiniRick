.empty_cart {
  height: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 50px;
}

.empty_cart image {
  width: 230rpx;
  height: 230rpx;
  border-radius: 230rpx;
}

.empty_cart text {
  font-size: 28rpx;
  color: #999;
}

