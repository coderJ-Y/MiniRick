page {
  background: #f7f7f7;
}

.classify {
  background: #fff;
  height: 350rpx;
  padding: 10rpx;
}
.title {
  margin-left: 220rpx;
  margin-top: 20rpx;
  background-color: rgb(92, 159, 197);
  border-radius: 50rpx;
  box-shadow: 2px 3px 5px rgb(201, 196, 196);
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 20rpx;
}
.item { 
  display: flex;
  width: calc(30% - 10rpx);
  height: 60rpx;
  line-height: 60rpx;
  padding: 5rpx;
  float: left;
  margin: 20rpx 10rpx;
  text-align: center;
  justify-content: center;
  border-radius: 10rpx;
  color: white;
  background: rgb(92, 159, 197);

}
.item.active {
  background: #f0f0f0;
  color: #707070
}  

/* 没有数据 */
.nodata {
  background: #fff;
  height: 950rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  display: flex;
  margin-top: 20rpx;
}
