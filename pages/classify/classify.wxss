/* 添加按钮 */
.add-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(92, 159, 197);
  box-shadow:0rpx 0rpx 30rpx rgb(92, 159, 197);
  position: fixed;
  right: 10rpx;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.iconjiahao {
  font-size: 50rpx;
  color: #fff;
}
