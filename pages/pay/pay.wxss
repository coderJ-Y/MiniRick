/* pages/pay/pay.wxss */
/* #f67353   rgb(92, 159, 197)*/
page {
  background: #f7f7f7;
}
.pay {
  width: 100%;
}
.goodInfo {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  display: flex;
  border-bottom: 1px solid #e6e6e6;
}
.imgBox {
  display: flex;
  width: 150rpx;
  height: 150rpx;
}
.imgBox image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10%;
}
.goodDesc {
  box-sizing: border-box;
  width: 550rpx;
  height: 110rpx;
  margin-left: 20rpx;
  flex-direction: column;
  /* justify-content: space-between; */
  padding: 20rpx;
}
.good-title {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.good-price {
  color: #f67353;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.total {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx;
  background: #fff;
}
.totalNum {
  font-size: 35rpx;
}
.totalNum .price {
  color: #f67353;
}  

/* buyInfo */
.buyInfo {
  display: flex;
  background: #fff;
  width: 100%;
  margin-top: 10rpx;
  flex-direction: column;
}
.item {
  display: flex;
  padding: 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e6e6e6
}
.item.noBorder {
  border-bottom: none
}
.left {
  font-size: 33rpx;
  color: #999;
  display: flex;
  align-items: center;
}
.iconicon_sport {
  margin-right: 20rpx;
  font-size: 38rpx;
}
.right {
  display: flex;
  align-items: center;
}
.right text {
  font-size: 30rpx;
  margin-right: 10rpx;
}
.iconzhixiang-right {
  margin-right: 10rpx;
  float: right;
  font-size: 38rpx;
}
/* buyerInfo */
.buyerInfo {
  background: #fff;
  margin-top: 10rpx;
  width: 100%;
}
.title {
  padding: 20rpx;
  font-size: 33rpx;
  border-bottom: 2rpx solid #e6e6e6;
  color: rgb(92, 159, 197);
  font-weight: bold;
}
.iconxiugai {
  margin-right: 10rpx;
}
.infoCon .item textarea {

}

/* btns */
.btns {
  background: #fff;
  width: 100%;
  height: 120rpx;
  left: 0;
  bottom: 0;
  position: absolute;
  display: flex;
  box-shadow: 0rpx -10rpx 20rpx rgba(0, 0, 0, 0.1);
  justify-content: center;
  align-items: center;
}
.buy {
  background: rgb(92, 159, 197);
  color: white;
  border-radius: 40rpx;
  font-size: 35rpx;
}